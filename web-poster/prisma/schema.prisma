generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model posts {
  id             String   @id
  user_id        String
  parent_post_id String?
  content        String
  like_count     Int
  dislike_count  Int
  created_at     DateTime @default(now())
}
